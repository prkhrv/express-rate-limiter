{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,             // Add this line to generate .d.ts files
    "declarationMap": true           // Optional: Generates source maps for declarations
  },
  "include": ["src/**/*.ts"]
}
